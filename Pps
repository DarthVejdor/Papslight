
}
}
Scanner sc = new Scanner(System.in);
int N = sc.nextInt(); // број на можни позиции int M = sc.nextInt(); // должина на уличата int[] pos = new int[N];
for (int i = 0; i < N; i++)
pos[i] = sc.nextInt();
Arrays.sort(pos);
int i = 0; // индекс на позиција
int lamps = 0; // број на светилки
int covered = 0; // последна осветлена позиција
while (covered <M) {
int bestLamp = -1;
// најди најдесна светилка што може да го осветли covered + 1 while (i <N && pos[i] - 2 <= covered + 1) {
}
bestLamp = pos[i];
i++;
if (bestLamp == -1) {
System.out.println("Не може да се осветли целата улица!");
return;
}
}
lamps++;
covered = bestLamp + 2; // HOBо осветлена зона
System.out.println(lamps);
