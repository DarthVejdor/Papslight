```import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import java.util.Arrays;

public class lab2_2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        double maxHours = 40;

        double[] time = new double[n];
        double[] profit = new double[n];

        for(int i=0;i<n;i++){
            time[i] = sc.nextDouble();
            profit[i] = sc.nextDouble();
        }
        List<Integer> index = new ArrayList<Integer>();
        for(int i = 0; i<n;i++){
            index.add(i);
        }
        index.sort((a,b) ->Double.compare(profit[b]/time[b], profit[a]/time[a]));
        double totalProfit = 0;
        double usedTime = 0;
        for(int i : index){
            if(usedTime+time[i] <= maxHours){
                totalProfit += profit[i];
                usedTime += time[i];
            } else{
                double remaining =maxHours-usedTime;
                totalProfit += profit[i] * (remaining/time[i]);
                break;
            }
        }
        System.out.println((int)totalProfit);
    }
}```
